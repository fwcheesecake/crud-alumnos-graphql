// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Student {
  control       String        @id @unique

  name          String
  lastname1     String
  lastname2     String?
  gender        Gender?
  birthday      DateTime

  email         String        @unique

  address       Address       @relation(fields: [address_id], references: [id])
  address_id    Int

  major         Major         @relation(fields: [major_id], references: [id])
  major_id      Int

  study_plan    StudyPlan     @relation(fields: [study_plan_id], references: [id]) 
  study_plan_id Int 

  semester      Int?

  tutor         Tutor         @relation(fields: [tutor_id], references: [id])
  tutor_id      Int

  student_state StudentState
}

model Tutor {
  id          Int           @id @unique @default(autoincrement())
  name        String

  student     Student[]
}

model StudyPlan {
  id          Int           @id @unique @default(autoincrement())
  name        String
  career      Career        @relation(fields: [career_id], references: [id])
  career_id   Int

  student     Student[]
}

model Major {
  id          Int           @id @unique @default(autoincrement())
  name        String

  career      Career        @relation(fields: [career_id], references: [id])
  career_id   Int

  student     Student[]
}

model Address {
  id          Int           @id @unique @default(autoincrement())
  zipcode     String

  exterior    String
  interior    String?

  street      Street        @relation(fields: [street_id], references: [id])
  street_id   Int

  suburb      Suburb        @relation(fields: [suburb_id], references: [id])
  suburb_id   Int

  city        City          @relation(fields: [city_id], references: [id])
  city_id     Int

  state       State         @relation(fields: [state_id], references: [id])
  state_id    Int

  student     Student[]
}

model State {
  id          Int           @id @unique @default(autoincrement())
  name        String

  city        City[]
  address     Address[]
}

model City {
  id          Int           @id @unique @default(autoincrement())
  name        String

  state       State         @relation(fields: [state_id], references: [id])
  state_id    Int     

  suburb      Suburb[]
  address     Address[]
}

model Suburb {
  id          Int           @id @unique @default(autoincrement())
  name        String

  city        City          @relation(fields: [city_id], references: [id])
  city_id     Int

  street      Street[]
  address     Address[]
}

model Street {
  id          Int           @id @unique @default(autoincrement())
  name        String

  suburb      Suburb        @relation(fields: [suburb_id], references: [id])
  suburb_id   Int
  address     Address[]
}

model Career {
  id          Int           @id @unique @default(autoincrement())
  name        Int
  
  study_plan  StudyPlan[]
  major       Major[]
}

// ---------------------
// Enumerados
// ---------------------

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum StudentState {
  ACTIVE
  TEMP_LEAVE
  OTHER
}